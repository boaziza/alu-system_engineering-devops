# Bash script that installs and configures HAProxy load balancer

set -e

# Install HAProxy
apt-get update -y
apt-get install -y haproxy

# Enable HAProxy service
sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy || echo "ENABLED=1" > /etc/default/haproxy

# Configure HAProxy
cat << 'EOF' > /etc/haproxy/haproxy.cfg
global
    daemon
    maxconn 256

defaults
>>>>>>> origin/main
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server web-01 44.201.220.22:80 check
    server web-02 34.227.160.138:80 check
EOF

# Restart HAProxy
systemctl restart haproxy
