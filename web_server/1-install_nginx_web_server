#!/usr/bin/env bash
# Install and configure Nginx to serve a page containing "Holberton School"

# Update packages and install nginx
apt-get update -y
apt-get install -y nginx

# Start nginx (without systemctl)
service nginx start

# Create a custom index page
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure Nginx is serving from /var/www/html
# Modify default site config (this guarantees port 80 is active)
sed -i 's|index nginx-debian.html|index index.html|' /etc/nginx/sites-available/default

# Restart nginx to apply config
service nginx restart
