#!/usr/bin/env bash
# Install and configure Nginx to display 'Holberton School' on the root of port 80

# Update packages and install nginx
apt-get update -y
apt-get install -y nginx

# Replace default index page content
echo "Holberton School" > /var/www/html/index.html

# Make sure Nginx listens on port 80 for both IPv4 and IPv6
sed -i 's/listen 80 default_server;/listen 80 default_server;\nlisten [::]:80 default_server;/' /etc/nginx/sites-available/default

# Fix permissions just in case
chmod 644 /var/www/html/index.html

# Restart Nginx using service (not systemctl)
service nginx restart
